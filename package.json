{
  "name": "web-components",
  "version": "2.0.45",
  "private": false,
  "sideEffects": [
    "*.vue",
    "*.css"
  ],
  "type": "module",
  "files": [
    "dist",
    "dist/src"
  ],
  "main": "./dist/main.js",
  "types": "./dist/lib/main.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "run-p \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "format": "prettier --write src/",
    "storybook": "storybook dev -p 6006",
    "storybook-docs": "storybook --docs --no-manager-cache",
    "build-storybook": "storybook build -o ./dist",
    "build-storybook-docs": "storybook build --docs",
    "prepare": "husky && npm run build",
    "generate-icon-types": "npx tsx src/shared/generate-icon-types.ts"
  },
  "peerDependencies": {
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@storybook/addon-links": "^10.0.2",
    "@storybook/addon-themes": "^10.0.2",
    "@storybook/vue3": "^10.0.2",
    "@storybook/vue3-vite": "^10.0.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.13.14",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.6",
    "npm-run-all2": "^6.2.0",
    "postcss": "^8.4.35",
    "prettier": "^3.3.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sass": "^1.82.0",
    "storybook": "^10.0.2",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.12",
    "vite-plugin-dts": "4.3.0",
    "vite-svg-loader": "^5.1.0",
    "terser": "^5.44.0"
  }
}
